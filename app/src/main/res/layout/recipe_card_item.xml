<!-- res/layout/recipe_card_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewRecipe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        tools:src="@drawable/main_logo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/textViewRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Recipe Name"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe Description"
            android:maxLines="1"
            android:ellipsize="end" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBarStyle"
            android:clickable="false"
            android:scaleX="0.70"
            android:scaleY="0.70"
            android:isIndicator="true"
            android:layout_marginStart="-33dp"
            android:layout_marginTop="-8dp"
            />

    </LinearLayout>

    <!--    <Button-->
    <!--        android:id="@+id/buttonViewEdit"-->
    <!--        android:layout_width="61dp"-->
    <!--        android:layout_height="36dp"-->
    <!--        android:text="@string/edit" />-->
    <ImageButton
        android:id="@+id/buttonViewEdit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_edit_24"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/editRecipe"
        />

    <CheckBox
        android:id="@+id/favoriteCheckBox"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:button="@drawable/baseline_favorite_border_24"
        android:theme="@style/favoriteCheckBoxStyle" />

</LinearLayout>